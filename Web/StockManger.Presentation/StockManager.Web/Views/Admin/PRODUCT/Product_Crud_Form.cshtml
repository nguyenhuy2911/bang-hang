@{

    Layout = null;
}
<div class="x_panel col-md-12 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2 class="col-md-7 col-sm-7 col-xs-12">Thông tin chung <small></small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content ">
        <form class="form-horizontal form-label-left">
            <div class="form-group">
                <label class="control-label font-normal col-md-2 col-sm-2 col-xs-12">Id:</label>
                <label class="control-label col-md-2 col-sm-2 col-xs-12">
                    xxx
                </label>
                <label class="control-label font-normal col-md-1 col-sm-1 col-xs-12">Item Code:  </label>
                <label class="control-label col-md-2 col-sm-2 col-xs-12">
                    xxx
                </label>
            </div>
            <div class="form-group">
                <label class="control-label font-normal col-md-2 col-sm-2 col-xs-12">
                    Danh mục: @*<span class="required">*</span>*@
                </label>
                <div class="col-md-3 col-sm-3 col-xs-12">
                    <div class="form-group">
                        <select class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <select class="form-control"></select>
                    </div>
                    <div class="form-group">
                        <select class="form-control"></select>
                    </div>
                </div>
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <img src="http://placehold.it/200x123" class="img-responsive">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label font-normal col-md-2 col-sm-2 col-xs-12">
                    Tên: @*<span class="required">*</span>*@
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input type="text" class="form-control col-md-12 col-sm-12 col-xs-12" rows="3" placeholder='' />
                </div>
            </div>
            <div class="form-group">
                <label class="control-label font-normal col-md-2 col-sm-2 col-xs-12">
                    Mô tả: @*<span class="required">*</span>*@
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <textarea class="form-control" rows="3" placeholder=''></textarea>
                </div>
            </div>
          
        </form>
    </div>
</div>
<div class="x_panel col-md-12 col-sm-12 col-xs-12">
    <div class="x_title">
        <h2 class="col-md-7 col-sm-7 col-xs-12">Thông bổ sung <small></small></h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content ">
        <div id="custom_carousel" class="custom_carousel carousel slide" data-interval="25000000000">
            <div class="controls">
                <ul class="nav col-md-12 col-sm-12 col-xs-12">
                    <li data-target="#custom_carousel" data-slide-to="0" class="active"><a href="#"><b>Nhà CC / Giá </b></a></li>
                    <li data-target="#custom_carousel" data-slide-to="1"><a href="#"><b>Kho</b></a></li>
                    <li data-target="#custom_carousel" data-slide-to="2"><a href="#"><b>Bar code</b></a></li>
                </ul>
            </div>
            

        </div>
    </div>
</div>

<div class="form-group">
    <div class="col-md-1 col-sm-2 col-xs-12 col-md-offset-9">
        <button type="submit" class="btn btn-warning col-md-12 col-sm-12 col-xs-12">Hủy</button>
    </div>
    <div class="col-md-1 col-sm-2 col-xs-12">
        <button type="submit" class="btn btn-success col-md-12 col-sm-12 col-xs-12">Lưu</button>
    </div>
</div>
<script>
    $(document).ready(function (ev) {
        $('#custom_carousel').on('slide.bs.carousel', function (evt) {
            $('#custom_carousel .controls li.active').removeClass('active');
            $('#custom_carousel .controls li:eq(' + $(evt.relatedTarget).index() + ')').addClass('active');
        });
    });
</script>
