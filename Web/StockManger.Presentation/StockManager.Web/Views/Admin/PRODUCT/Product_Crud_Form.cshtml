@model StockManager.Web.Models.PRODUCT.Products_CRUD_ViewModel
@{

    Layout = null;
}

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Cập nhật
                    <small></small>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" data-dismiss="modal" role="button">
                            <i class="material-icons">close</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="frm-crud-product" action="">
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Thông tin cơ bản
                                        <small>Nhập thông tin sản phẩm</small>
                                    </h2>
                                </div>
                                <div class="body">
                                    <div class="col-sm-3">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.Product_Name, new { @class = "form-control" })
                                                <label class="form-label">Tên sản phẩm</label>
                                            </div>
                                            @Html.ValidationMessageFor(x => x.Product_Name, null, new { @class = "error" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.Sale_Price, new { @class = "form-control" })
                                                <label class="form-label">Giá bán</label>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Sale_Price, null, new { @class = "error" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group form-float">
                                            <div class="form-line">
                                                @Html.TextBoxFor(m => m.Size, new { @class = "form-control" })
                                                <label class="form-label">Khối lượng</label>
                                            </div>
                                            @Html.ValidationMessageFor(model => model.Size, null, new { @class = "error" })
                                        </div>
                                    </div>
                                    <div class="col-sm-3">
                                        <div class="form-group">
                                            <div class="form-line">
                                                @*<label class="form-label">Đơn vị tính</label>*@
                                                @Html.DropDownListFor(m => m.Unit, Model.UnitList, new { @class = "form-control show-tick" })

                                            </div>
                                            @Html.ValidationMessageFor(model => model.Unit, null, new { @class = "error" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Mô tả sản phẩm
                                        <small>Nhập mô tả</small>
                                    </h2>
                                </div>
                                <div class="body">
                                    @Html.TextAreaFor(m => m.Description, new { @id = "txt_Description", @class = "txt-description" })
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row clearfix" style="display:none">
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    Hình ảnh
                                    <small>Upload file</small>
                                </h2>

                            </div>
                            <div class="body">
                                <form action="/" id="frmFileUpload" class="dropzone" method="post" enctype="multipart/form-data">
                                    <div class="dz-message">
                                        <div class="drag-icon-cph">
                                            <i class="material-icons">touch_app</i>
                                        </div>
                                        <h3>Drop files here or click to upload.</h3>
                                        <em>(This is just a demo dropzone. Selected files are <strong>not</strong> actually uploaded.)</em>
                                    </div>
                                    <div class="fallback">
                                        <input name="file" type="file" multiple />
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(function () {
        $.AdminBSB.input.activate();
        $.AdminBSB.dropdownMenu.activate();
        $.AdminBSB.select.activate();
        $.AdminBSB.Tinymce.setup("textarea.txt-description");
        $("#frmFileUpload").dropzone({
            removedfile: function (file) {
                alert("testremove");
                var _ref;
                if (file.previewElement) {
                    if ((_ref = file.previewElement) != null) {
                        _ref.parentNode.removeChild(file.previewElement);
                    }
                }
                return this._updateMaxFilesReachedClass();
            },

        });
        $("#frm-crud-product").submit(function (e) {
            e.preventDefault(); //STOP default action
            _PRODUCT.saveProduct();


        });

    })
</script>
@Scripts.Render("~/bundles/jqueryval")