@model StockManager.Web.Models.PRODUCT.Products_CRUD_ViewModel
@{

    Layout = null;
}

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)
<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <h2>
                    Cập nhật
                    <small></small>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" data-dismiss="modal" role="button">
                            <i class="material-icons">close</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="frm-crud-product" action="">
                    @Html.HiddenFor(m => m.Product_ID)
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Thông tin cơ bản
                                        <small>Nhập thông tin sản phẩm</small>
                                    </h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div class="form-line combobox">
                                                    <label class="form-label">Quan hệ với</label>
                                                    @Html.DropDownListFor(m => m.ProductGroup_ID, Model.Product_Groups_List, new { @class = "form-control show-tick" })

                                                </div>
                                                @Html.ValidationMessageFor(model => model.ProductGroup_ID, null, new { @class = "error" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Product_Name, new { @class = "form-control" })
                                                    <label class="form-label">Tên sản phẩm</label>
                                                </div>
                                                @Html.ValidationMessageFor(x => x.Product_Name, null, new { @class = "error" })
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Sale_Price, new { @class = "form-control" })
                                                    <label class="form-label">Giá bán</label>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Sale_Price, null, new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
                                                    <label class="form-label">Khối lượng</label>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Quantity, null, new { @class = "error" })
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line combobox">
                                                    <label class="form-label">Đơn vị tính</label>
                                                    @Html.DropDownListFor(m => m.Unit_ID, Model.UnitList, new { @class = "form-control show-tick" })

                                                </div>
                                                @Html.ValidationMessageFor(model => model.Unit_ID, null, new { @class = "error" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="row clearfix" view-when="update">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Thông tin thêm
                                        <small>Nhập Thông tin</small>
                                    </h2>
                                </div>
                                <div class="body">
                                    <!-- Nav tabs -->
                                    <ul class="nav nav-tabs tab-col-purple" role="tablist">
                                        <li role="presentation" class="active">
                                            <a href="#tab-description" data-toggle="tab">
                                                <i class="material-icons">format_indent_decrease</i> Mô tả
                                            </a>
                                        </li>
                                        <li role="presentation">
                                            <a href="#tab-image" data-toggle="tab">
                                                <i class="material-icons">insert_photo</i> Hình ảnh
                                            </a>
                                        </li>

                                    </ul>

                                    <!-- Tab panes -->
                                    <div class="tab-content">
                                        <div role="tabpanel" class="tab-pane fade in active" id="tab-description">
                                            <textarea id="txt_Description" name="Description" class="txt-description">@Html.Raw(Model.Description)</textarea>
                                        </div>
                                        <div role="tabpanel" class="tab-pane fade" id="tab-image">
                                            <div id="divFileUpload" class="dropzone" method="post">
                                                <div class="dz-message">
                                                    <div class="drag-icon-cph">
                                                        <i class="material-icons">touch_app</i>
                                                    </div>
                                                    <h3>Drop files here or click to upload.</h3>
                                                    <em>(This is just a demo dropzone. Selected files are <strong>not</strong> actually uploaded.)</em>
                                                </div>
                                                <div class="fallback">
                                                    <input id="file_product_img_upload" name="file" type="file" multiple />
                                                </div>
                                                <a href="javascript:;" id="btnSubmit" class="btn btn-primary btn-lg">Upload</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

</div>


<script type="text/javascript">
    $(function () {
        $.AdminBSB.input.activate();
        $.AdminBSB.dropdownMenu.activate();
        $.AdminBSB.select.activate();
        $.AdminBSB.Tinymce.setup("textarea.txt-description");
        var myDropzone = new Dropzone("div#divFileUpload", {
            //  $("div#divFileUpload").dropzone({
            autoProcessQueue: false,
          //  autoQueue: false,
            params: _PRODUCT.getProduct_Image_RequestValue(),
            url: "/image/product-upload",
            // maxFilesize: 1,
            acceptedFiles: "image/jpeg, image/jpg, image/png",
            //  parallelUploads: 1,
            init: function () {
                $('#btnSubmit').on('click', function (event) {
                    event.preventDefault();
                    myDropzone.processQueue();
                });
            },

            removedfile: function (file) {
                alert("testremove");
                var _ref;
                if (file.previewElement) {
                    if ((_ref = file.previewElement) != null) {
                        _ref.parentNode.removeChild(file.previewElement);
                    }
                }
                return this._updateMaxFilesReachedClass();
            },

        });
        $("#frm-crud-product").submit(function (e) {
            e.preventDefault(); //STOP default action
            _PRODUCT.saveProduct();
        });
        
    })
</script>
@Scripts.Render("~/bundles/jqueryval")