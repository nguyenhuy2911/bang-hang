@model StockManager.Web.Models.Admin.Products_CRUD_ViewModel
@using StockManager.Web.HtmlHelper;
@{

    Layout = null;
}

@Html.AntiForgeryToken()
@Html.ValidationSummary(true)

<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card main-content-body">
            <div class="header bg-blue-grey">
                <h2>
                    Cập nhật
                    <small>nhập thông tin sản phẩm</small>
                </h2>
                <ul class="header-dropdown m-r--5">
                    <li class="dropdown">
                        <a href="javascript:void(0);" data-dismiss="modal" role="button">
                            <i class="material-icons">close</i>
                        </a>
                    </li>
                </ul>
            </div>
            <div class="body">
                <form id="frm-crud-product" action="">
                    @Html.HiddenFor(m => m.Product_ID)
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>
                                        Thông tin cơ bản
                                        <small>Nhập thông tin sản phẩm</small>
                                    </h2>
                                </div>
                                <div class="body">
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div class="form-line combobox">
                                                    <label class="form-label">Loại sản phẩm</label>
                                                    @Html.DropDownListFor(m => m.Product_Type_ID, Model.Product_Type_List, new { @class = "form-control show-tick" })

                                                </div>
                                                @Html.ValidationMessageFor(model => model.Product_Type_ID, null, new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <div class="form-line combobox">
                                                    <label class="form-label">Sản phẩm gốc</label>
                                                    @Html.DropDownListFor(m => m.Product_Group_ID, Model.Product_Group_List, new { @class = "form-control show-tick" })

                                                </div>
                                                @Html.ValidationMessageFor(model => model.Product_Group_ID, null, new { @class = "error" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row clearfix">
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Product_Name, new { @class = "form-control" })
                                                    <label class="form-label">Tên sản phẩm</label>
                                                </div>
                                                @Html.ValidationMessageFor(x => x.Product_Name, null, new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Org_Price, new { @class = "form-control" })
                                                    <label class="form-label">Giá gốc</label>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Org_Price, null, new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Sale_Price, new { @class = "form-control" })
                                                    <label class="form-label">Giá bán</label>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Sale_Price, null, new { @class = "error" })
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line">
                                                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control" })
                                                    <label class="form-label">Khối lượng</label>
                                                </div>
                                                @Html.ValidationMessageFor(model => model.Quantity, null, new { @class = "error" })
                                            </div>
                                        </div>

                                        <div class="col-sm-3">
                                            <div class="form-group form-float">
                                                <div class="form-line combobox">
                                                    <label class="form-label">Đơn vị tính</label>
                                                    @Html.DropDownListFor(m => m.Unit_ID, Model.UnitList, new { @class = "form-control show-tick" })

                                                </div>
                                                @Html.ValidationMessageFor(model => model.Unit_ID, null, new { @class = "error" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <div class="row clearfix" view-when='update'>
                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                        <div class="card">
                            <div class="header">
                                <h2>
                                    Thông tin bổ sung
                                    <small>Nhập  Thông tin bổ sung</small>
                                </h2>
                            </div>
                            <div class="body">

                                <div class="row clearfix">
                                    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                        <!-- Nav tabs -->
                                        <ul class="nav nav-tabs tab-col-purple" role="tablist">
                                            <li role="presentation" class="active">
                                                <a href="#tab-image" data-toggle="tab">
                                                    <i class="material-icons">insert_photo</i> Hình ảnh
                                                </a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#tab-description" data-toggle="tab">
                                                    <i class="material-icons">format_indent_decrease</i> Mô tả
                                                </a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#tab-attribute" data-toggle="tab">
                                                    <i class="material-icons">insert_photo</i> Thuộc tính
                                                </a>
                                            </li>
                                        </ul>
                                        <!-- Tab panes -->
                                        <div class="tab-content">
                                            <div role="tabpanel" class="tab-pane fade in active" id="tab-image">
                                                <div id="divFileUpload" class="dropzone" method="post">
                                                    <div class="dz-message">
                                                        <div class="drag-icon-cph">
                                                            <i class="material-icons">touch_app</i>
                                                        </div>
                                                        <h3>Kéo thả hình ảnh.</h3>
                                                        <em></em>
                                                    </div>
                                                    <div class="fallback">
                                                        <input id="file_product_img_upload" name="file" type="file" multiple />
                                                    </div>
                                                </div>
                                                <input type="button" id="btnSubmit" class="btn btn-primary btn-lg" value="Upload">
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade " id="tab-description">
                                                <textarea id="txt_Description" name="Description" class="txt-description">@Html.Raw(Model.Description)</textarea>
                                            </div>
                                            <div role="tabpanel" class="tab-pane fade " id="tab-attribute">
                                                <div id="div_attribute" class="row clearfix">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    var imgJson = '@Model.ListImgJson';
    var listImage = (imgJson != null && imgJson !="") ? JSON.parse(htmlDecode(imgJson)) : null;
    $(function () {
        $.AdminBSB.input.activate();
        $.AdminBSB.dropdownMenu.activate();
        $.AdminBSB.select.activate();
        _PRODUCT.Get_Attributes_By_ProductType();
        $("#Product_Type_ID").change(function () {
            _PRODUCT.Get_Attributes_By_ProductType();
        });
        $("#frm-crud-product").submit(function (e) {
            e.preventDefault();
            _PRODUCT.saveProduct();
        });
        $.AdminBSB.Tinymce.setup("textarea.txt-description");

        var myDropzone = new Dropzone("div#divFileUpload", {
            autoProcessQueue: false,
            params: _PRODUCT.getItem_Image_RequestValue(),
            url: "/images/product-upload",
            acceptedFiles: "image/jpeg, image/jpg, image/png",
            parallelUploads: 20,
            maxFiles: 20,
            addRemoveLinks: true,
            thumbnailWidth: 240, //I want to change width to 100% instead
            thumbnailHeight: 240,
            init: function () {
                var thisDropzone = this;
                $('#btnSubmit').on('click', function (event) {
                    event.preventDefault();
                    thisDropzone.processQueue();
                });
                if (listImage!= null) {
                    $.each(listImage, function (index, item) {

                        var mockFile = {
                            name: item.Name,
                            id: item.Id,
                            path: item.Path,
                            //  size: 9000000,
                            accepted: true,
                            kind: 'image'
                        };
                        // Call the default addedfile event handler
                        thisDropzone.options.addedfile.call(thisDropzone, mockFile);

                        // And optionally show the thumbnail of the file:ss
                        thisDropzone.files.push(mockFile);
                        thisDropzone.createThumbnailFromUrl(mockFile, "images-handle/get-image?path=" + item.Path + "&w=240&h=240", function () {
                            // thisDropzone.emit("complete", mockFile);
                        }, "anonymous");
                        thisDropzone.emit("success", mockFile);
                        thisDropzone.emit("complete", mockFile);
                        //    thisDropzone.uploadFiles([mockFile])

                    });
                }

            },
            removedfile: function (file, _) {
                $.ajax({
                    type: "POST",
                    url: "/images/delete-image",
                    data: { id: file.id },
                    dataType: "json",
                    success: function (response) {
                        if (response.StatusCode != 0)
                            showErrorMessage(response.StatusMessage, "#div-crud-modal");
                        else {
                            showSuccessMessage(response.StatusMessage, "#div-crud-modal");
                            var _ref;
                            if (file.previewElement) {
                                if ((_ref = file.previewElement) != null) {
                                    _ref.parentNode.removeChild(file.previewElement);
                                }
                            }
                        }
                    }
                });
                return this._updateMaxFilesReachedClass();
            },

        });
    })
</script>
@Scripts.Render("~/bundles/jqueryval")